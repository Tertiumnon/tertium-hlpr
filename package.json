    "prepare": "husky"
  },
  "devDependencies": {
    "@tertium/js": "^0.16.0",
    "@types/node": "^22.13.10",
    "husky": "^9.1.7",
    "typescript": "^5.8.3"
  },
  "bin": {
    "hlpr": "./bin/hlpr.js"
  },
  "files": [
    "bin",
    "index.js",
    "package.json"
